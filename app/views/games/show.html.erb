<% if @game.movie %>
  <div class="reveal-banner">
    <div class="container">
      <h2>Le film de la soirée sera...</h2>
      <p>Le film va apparaitre dans quelques instants</p>
    </div>
  </div>
  <div class="container">
    <div class="wrapper">
      <div class="circle"></div>
      <div class="circle"></div>
      <div class="circle"></div>
      <div class="shadow"></div>
      <div class="shadow"></div>
      <div class="shadow"></div>
    </div>
    <div class="game-card d-flex">
      <div class="game-card-img">
        <%= image_tag "https://image.tmdb.org/t/p/w300#{@movie.poster}" %>
      </div>
      <div class="game-card-info">
        <h3><%= @movie.title %></h3>

        <p><%= @movie_data[:runtime_movie] %> minutes</p>
        <p><%= @movie_data[:genres_movie].join(" / ") %></p>


        <p><%= "⭐" * @movie.vote_average %></p>
        <p id="movie-overview"><%= @movie.overview %></p>
        <div class="button letters">
          <%= link_to "Voir le film", @movie_data[:homepage_movie], class: "btn" %>
        </div>
      </div>
    </div>
  </div>

<% else %>

<div class="info-partie">
  <div class="info-partie-container">
    <p>Rejoins la partie sur ton écran <br> ou avec l’application Trust me</p>
    <div class="info-partie-token">
      <h3>code partie :</h3>
      <p><%= @game.token %></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="participants-list" data-controller="participants">
    <ul class="participants" id="participants">
      <% @participations.each do |participation| %>
        <% if participation.updated_at != participation.created_at %>
          <li>
            <span><%= participation.user.nickname %></span> à fini de jouer !
            <i class="fas fa-check-circle"></i>
          </li>
        <% else %>
          <li>
            <span><%= participation.user.nickname %></span> à rejoint la partie !</li>
        <% end %>
      <% end %>
        <li id="load">
          <p>En attente d'autres participants</p>
          <div class="bar"></div>
        </li>
    </ul>
    <div class="game-btn d-flex">
      <% if @participations.count { |participation| participation.updated_at != participation.created_at } >= 2 %>
        <div class="button letters">
            <%= link_to "Reveal", find_movie_game_path(@game), method: :post, class: "btn" %>
        </div>
      <% end %>
      <% if @participation %>
        <% if @participation.updated_at == @participation.created_at %>
          <div class="button letters">
            <%= link_to "Launch", edit_game_participation_path(@game, @participation), class: "btn" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<% end %>

